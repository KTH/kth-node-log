{
  "name": "@kth/log",
  "version": "5.0.0",
  "description": "Logging module for Node.js applications.",
  "automaticPublish": "true",
  "main": "dist/index.js",
  "author": {
    "name": "KTH",
    "email": "infosys@kth.se",
    "url": "https://github.com/KTH"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KTH/kth-node-log"
  },
  "scripts": {
    "lint": "eslint \"**/*.ts\" --quiet",
    "lint-v": "eslint \"**/*.ts\" ",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "tsc",
    "prepare": "bash -c 'if [ -f ./node_modules/.bin/husky ]; then husky install; fi'"
  },
  "dependencies": {
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1"
  },
  "keywords": [
    "node",
    "logging",
    "syslog"
  ],
  "devDependencies": {
    "@kth/eslint-config-kth": "^3.0.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "eslint": "^8.35.0",
    "husky": "^7.0.4",
    "jest": "^29.6.1",
    "prettier": "^2.8.4",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^29.1.1",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "// (jest)": "configuration for jest",
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true,
    "notifyMode": "failure-change",
    "testEnvironment": "node",
    "verbose": true
  }
}
